<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="MyApp" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/hallocasaAppDatasource</jta-data-source>
    <class>com.hallocasa.entities.EntityExample</class>
    <class>com.hallocasa.entities.EntityFilterListingStep</class>
    <class>com.hallocasa.entities.EntityFilterShowingStep</class>
    <class>com.hallocasa.entities.EntityHcFilter</class>
    <class>com.hallocasa.entities.EntityHcFilterCondition</class>
    <class>com.hallocasa.entities.EntityHcFilterNature</class>
    <class>com.hallocasa.entities.EntityHcFilterType</class>
    <class>com.hallocasa.entities.EntityUser</class>
    <class>com.hallocasa.entities.properties.EntityPropertyField</class>
    <class>com.hallocasa.entities.properties.EntityPropertyFieldFilter</class>
    <class>com.hallocasa.entities.properties.EntityPropertyFieldOption</class>
    <class>com.hallocasa.entities.properties.EntityPropertyFilterConditionOption</class>
    <class>com.hallocasa.entities.security.EntityAuthorizationCode</class>
    <class>com.hallocasa.entities.security.EntitySecurityToken</class>
    <!-- converters -->
    <class>com.hallocasa.persistence.converters.HcBooleanConverter</class>
    <class>com.hallocasa.persistence.converters.FilterOperationStepConverter</class>
    <class>com.hallocasa.persistence.converters.RangeFieldPresentationConverter</class>
    <class>com.hallocasa.persistence.converters.RangeOperandConverter</class>
    <class>com.hallocasa.persistence.converters.ShowChoiceConverter</class>
    <class>com.hallocasa.persistence.converters.HcFilterTypeNatureConverter</class>
    <properties>
      <property name="eclipselink.target-database" value="MySQL"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="none"/>
      <property name="eclipselink.weaving" value="false"/>
    </properties>
  </persistence-unit>
</persistence>