                xmlns:cc="http://java.sun.com/jsf/composite"
                xmlns:utils="http://java.sun.com/jsf/composite/components/utils">
    <cc:interface componentType="profileEntryComponent">
        <cc:attribute name="user"
                      type="com.hallocasa.commons.vo"
                      shortDescription="Profile to show"/>
        <cc:attribute name="size"
                      type="java.lang.Integer"
				      default="200"
                      shortDescription="profile entry size"/>
        <cc:attribute name="language"
                      type="java.util.String"
				      default="en"
                      shortDescription="Language to view user data"/>
    </cc:interface>
    <cc:implementation>
        <h:panelGroup id="profile-entry-container" 
        			  style="width:#{this.attrs.size}px">
        	<div style="width:30%">
        		<utils:imageEditor 
	               imageUrl="#{profileEntryComponent.user.image}"
	               imageType="userImage"
	               readOnly="true"/>
        	</div>
        	<div style="width:30%">
        		<ui:repeat var="#{profileEntryComponent.user.userTypes}" 
        				   value="userType">
        			<div style="display:block">
        				#{profileEntryComponent.load(userType)}	
        			</div>   
        		</ui:repeat>
        		<ui:repeat var="#{profileEntryComponent.user.spokenLanguages}" 
        				   value="spokenLanguage">
        			<div style="display:block">
        				#{spokenLanguage.languageName}	
        			</div>   
        		</ui:repeat>
        	</div>
        	<div style="width:40%">
        		<p>#{profileEntryComponent.loadDescription()}</p>
        	</div>
        </h:panelGroup>
    </cc:implementation>
</ui:composition>